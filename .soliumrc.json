{
    "extends": "solium:recommended",
    "plugins": [
        "security"
    ],
    "rules": {
        "indentation": [
            "error",
            4
        ],
        "no-empty-blocks": "off",
        "quotes": [
            "error",
            "double"
        ],
        "security/no-block-members": "off",
        "security/no-call-value": "off",
        "security/no-inline-assembly": "off",
        "security/no-low-level-calls": "off"
    }
}